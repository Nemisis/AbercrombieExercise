<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_promotion_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/item_promotions_image"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/item_promotions_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/item_text_padding"
        android:paddingEnd="@dimen/item_text_padding"
        android:paddingLeft="@dimen/item_text_padding"
        android:paddingRight="@dimen/item_text_padding"
        android:paddingStart="@dimen/item_text_padding"
        android:paddingTop="@dimen/item_text_padding"
        android:textAppearance="@style/TextAppearance.Abercrombie.Title"
        tools:text="Abercrombie Title"/>

</LinearLayout>